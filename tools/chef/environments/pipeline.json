{
  "name": "pipeline",
  "description": "",
  "json_class": "Chef::Environment",
  "chef_type": "environment",

  "default_attributes": {
    "nginx": {
      "sites": {
        "lorekeepers.org-qa": {
          "inherits": "my-app",
          "docroot": "/var/www/lorekeepers.org-qa/current/public",
          "server_name": "qa-lorekeepers.org.webpipeline.net",
          "capistrano": {
            "deploy_to": "/var/www/lorekeepers.org-qa"
          }
        },
        "lorekeepers.org-uat": {
          "inherits": "my-app",
          "docroot": "/var/www/lorekeepers.org-uat/current/public",
          "server_name": "uat-lorekeepers.org.webpipeline.net",
          "capistrano": {
            "deploy_to": "/var/www/lorekeepers.org-uat"
          }
        }
      }
    },
    "mysql": {
      "users": {
        "lorekeepers.org-qa": {
          "database_name": "lorekeepers.org-qa"
        },
        "lorekeepers.org-uat": {
          "database_name": "lorekeepers.org-uat"
        }
      }
    }
  }
}
